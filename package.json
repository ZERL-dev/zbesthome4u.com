{
    "name": "client",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "npm run build:tailwind && npm run build:sass && remix build",
        "build:tailwind": "tailwindcss -i ./app/css/tailwind.css -m",
        "build:sass": "node-sass ./app/css/sass.scss -o ./app/css --output-style compressed",
        "dev": "concurrently \"npm run dev:tailwind\" \"npm run dev:sass\" \"remix dev --manual\"",
        "dev:tailwind": "tailwindcss -i ./app/css/tailwind.css -w",
        "dev:sass": "onchange app/**/*.scss -- npm run build:sass",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
        "start": "remix-serve ./build/index.js",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@chakra-ui/react": "^2.8.2",
        "@emotion/react": "^11.11.3",
        "@emotion/server": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@remix-run/css-bundle": "^2.5.1",
        "@remix-run/node": "^2.5.1",
        "@remix-run/react": "^2.5.1",
        "@remix-run/serve": "^2.5.1",
        "@remix-run/vercel": "^1.19.3",
        "@vercel/remix": "^2.10.2",
        "axios": "^1.6.5",
        "node-sass": "^9.0.0",
        "onchange": "^7.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.0.1",
        "sass": "^1.77.6",
        "vite-tsconfig-paths": "^4.3.2"
    },
    "devDependencies": {
        "@remix-run/dev": "^2.5.1",
        "@remix-run/node": "^2.5.1",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "autoprefixer": "^10.4.17",
        "concurrently": "^8.2.2",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
